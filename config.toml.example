# ttwm configuration file
# Copy to ~/.config/ttwm/config.toml and customize

[appearance]
# Gap between windows (pixels)
gap = 8
# Gap from screen edges (pixels)
outer_gap = 8
# Window border width (pixels)
border_width = 2
# Tab bar height (pixels)
tab_bar_height = 26
# Tab bar font (fontconfig name, e.g., "monospace", "DejaVu Sans Mono", "JetBrains Mono")
tab_font = "Segoe UI"
# Tab bar font size in points
tab_font_size = 12
# Show application icons in tabs
show_tab_icons = true
# Vertical tab bar width (pixels) - icons only, no text
vertical_tab_width = 28

[colors]
# Colors in hex format (#RRGGBB)
tab_bar_bg = "#000000"
tab_focused_bg = "#5294e2"
tab_unfocused_bg = "#3a3a3a"
# Visible tab in unfocused frame
tab_visible_unfocused_bg = "#4a6a9a"
# Tagged window tab background
tab_tagged_bg = "#e06c75"
# Urgent window tab background (demands attention)
tab_urgent_bg = "#d19a66"
tab_text = "#ffffff"
# Text color for background tabs
tab_text_unfocused = "#888888"
# Separator between inactive tabs
tab_separator = "#4a4a4a"
border_focused = "#5294e2"
border_unfocused = "#3a3a3a"

[keybindings]
# Format: "Modifier+Key" where Modifier is Mod4/Super, Shift, Control, Alt
# Key names: a-z, 0-9, Return, Tab, Page_Up, Page_Down, Left, Right, Up, Down, etc.

# Tab navigation
cycle_tab_forward = "Mod4+Page_Down"
cycle_tab_backward = "Mod4+Page_Up"
focus_tab_1 = "Mod4+1"
focus_tab_2 = "Mod4+2"
focus_tab_3 = "Mod4+3"
focus_tab_4 = "Mod4+4"
focus_tab_5 = "Mod4+5"
focus_tab_6 = "Mod4+6"
focus_tab_7 = "Mod4+7"
focus_tab_8 = "Mod4+8"
focus_tab_9 = "Mod4+9"

# Window focus
focus_next = "Mod4+j"
focus_prev = "Mod4+k"

# Frame navigation (spatial)
focus_frame_left = "Mod4+Left"
focus_frame_right = "Mod4+Right"
focus_frame_up = "Mod4+Up"
focus_frame_down = "Mod4+Down"

# Move windows between frames
move_window_left = "Mod4+Shift+Left"
move_window_right = "Mod4+Shift+Right"

# Resize splits
resize_shrink = "Mod4+Control+Left"
resize_grow = "Mod4+Control+Right"

# Splitting
split_horizontal = "Mod4+s"
split_vertical = "Mod4+v"

# Window management
close_window = "Mod4+q"
toggle_float = "Mod4+f"
toggle_fullscreen = "Mod4+Return"
toggle_vertical_tabs = "Mod4+/"
quit = "Mod4+Control+F4"

# Workspace navigation (9 virtual desktops)
workspace_next = "Mod4+]"
workspace_prev = "Mod4+["

# Tagging (batch window operations)
tag_window = "Mod4+t"
move_tagged_windows = "Mod4+a"
untag_all = "Mod4+Shift+t"

# Urgent windows
focus_urgent = "Mod4+space"

# Monitor navigation (for multi-monitor setups)
focus_monitor_left = "Mod4+Control+Left"
focus_monitor_right = "Mod4+Control+Right"

[exec]
# Run programs with keybindings
# Format: "Modifier+Key" = "command [args...]"
"Mod4+x" = "alacritty"
"Mod4+r" = "gmrun"

# =============================================================================
# Startup Layout Configuration
# =============================================================================
# Define initial layouts and spawn applications when ttwm starts.
# Each workspace (1-9) can have its own layout tree.
#
# Layout nodes are either:
#   - frame: A leaf node that contains windows (tabs)
#   - split: An internal node that divides space between two children
#
# Frame options:
#   - name: Optional frame name (for identification)
#   - vertical_tabs: Display tabs vertically on the left (default: false)
#   - apps: List of commands to spawn in this frame
#
# Split options:
#   - direction: "horizontal" (side-by-side) or "vertical" (stacked)
#   - ratio: Split ratio from 0.1 to 0.9 (default: 0.5)
#   - first: First child node (left/top)
#   - second: Second child node (right/bottom)

# Example: Development workspace with editor, terminal, and browser
# [startup.workspace.1]
# layout = { type = "split", direction = "horizontal", ratio = 0.6, first = { type = "frame", name = "editor", apps = ["code ~/projects"] }, second = { type = "split", direction = "vertical", ratio = 0.5, first = { type = "frame", name = "terminal", apps = ["alacritty"] }, second = { type = "frame", name = "browser", apps = ["firefox"] } } }

# Example: Simple single-frame workspace
# [startup.workspace.2]
# layout = { type = "frame", name = "scratch" }

# Example: Vertical split with vertical tabs on one side
# [startup.workspace.3]
# layout = { type = "split", direction = "vertical", ratio = 0.7, first = { type = "frame", name = "main", apps = ["alacritty"] }, second = { type = "frame", name = "references", vertical_tabs = true, apps = ["firefox"] } }
